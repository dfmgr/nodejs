#!/usr/bin/env bash
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
##@Version       : 202207042253-git
# @Author        : Jason Hempstead
# @Contact       : jason@casjaysdev.com
# @License       : WTFPL
# @ReadME        : setup_vercel --help
# @Copyright     : Copyright: (c) 2021 Jason Hempstead, CasjaysDev
# @Created       : Thursday, Mar 11, 2021 08:15 EST
# @File          : setup_vercel
# @Description   : vercel wrapper app with rm all unaliased deployments
# @TODO          :
# @Other         :
# @Resource      :
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
PROG="setup_vercel"
USER="${SUDO_USER:-${USER}}"
HOME="${USER_HOME:-${HOME}}"
SRC_DIR="${BASH_SOURCE%/*}"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
#set opts

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Main function
__version() { app_version; }
__help() {
  app_help "Usage: setup_vercel [command]" \
    "-v, --version          -  display version" \
    "-h, --help             -  display help"
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
__init() {
  vercel="$(builtin type -P vercel || builtin type -P now || echo '')"
  if builtin type -P npm 2>/dev/null && [ -z "$vercel" ]; then
    npm i -g vercel &>/dev/null &&
      builtin type -P vercel 2>/dev/null &&
      vercel "$*"
    return $?
  else
    return 0
  fi
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
__setup_vercel() {
  if [ -f "$vercel" ]; then
    $vercel "$*"
    return $?
  else
    printf_red "Neither vercel nor now is installed"
    printf_yellow "'npm i -g vercel' or 'yarn global add vercel'"
    return 1
  fi
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
main() {
  if [ -f "$SRC_DIR/functions.bash" ]; then local DIR="$SRC_DIR"; else local DIR="$HOME/.local/bin"; fi
  if [ -f "$DIR/functions.bash" ]; then
    . "$DIR/functions.bash"
  else
    printf "\t\t\\033[0;31m%s \033[0m\n" "Couldn't source the functions file from $DIR"
    return 1
  fi
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  case $1 in
  -v | --version) __version ;;
  -h | --help) __help ;;
  esac
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  __init "$*"
  if [ $# = 0 ]; then
    __setup_vercel ls
    return $?
  else
    if [ "$1" = "--all" ]; then
      for app in $(__setup_vercel ls | grep http.*// | awk '{print $2}'); do
        __setup_vercel rm "$app" --safe --yes
      done && return 0 || return 1
    else
      __setup_vercel rm $1 --safe --yes && return 0 || return 1
    fi
  fi
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# execute function
main "$@"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
exit $?
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# end
