SETUP_FNM_CONFIG_FILE="${SETUP_FNM_CONFIG_FILE:-settings.conf}"
SETUP_FNM_CONFIG_DIR="${SETUP_FNM_CONFIG_DIR:-$HOME/.config/misc/settings/setup_fnm}"
SETUP_FNM_CONFIG_BACKUP_DIR="${SETUP_FNM_CONFIG_BACKUP_DIR:-$HOME/.local/share/misc/settings/setup_fnm/backups}"
SETUP_FNM_RUN_DIR="${SETUP_FNM_RUN_DIR:-$HOME/.local/run/system_scripts/$SETUP_FNM_SCRIPTS_PREFIX}"
SETUP_FNM_LOG_DIR="${SETUP_FNM_LOG_DIR:-$HOME/.local/log/setup_fnm}"
SETUP_FNM_TEMP_DIR="${SETUP_FNM_TEMP_DIR:-$HOME/.local/tmp/system_scripts/setup_fnm}"
SETUP_FNM_CACHE_DIR="${SETUP_FNM_CACHE_DIR:-$HOME/.cache/setup_fnm}"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Color Settings
SETUP_FNM_OUTPUT_COLOR_1="${SETUP_FNM_OUTPUT_COLOR_1:-4}"
SETUP_FNM_OUTPUT_COLOR_2="${SETUP_FNM_OUTPUT_COLOR_2:-5}"
SETUP_FNM_OUTPUT_COLOR_GOOD="${SETUP_FNM_OUTPUT_COLOR_GOOD:-2}"
SETUP_FNM_OUTPUT_COLOR_ERROR="${SETUP_FNM_OUTPUT_COLOR_ERROR:-1}"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Notification Settings
SETUP_FNM_NOTIFY_ENABLED="${SETUP_FNM_NOTIFY_ENABLED:-yes}"
SETUP_FNM_GOOD_NAME="${SETUP_FNM_GOOD_NAME:-Great:}"
SETUP_FNM_ERROR_NAME="${SETUP_FNM_ERROR_NAME:-Error:}"
SETUP_FNM_GOOD_MESSAGE="${SETUP_FNM_GOOD_MESSAGE:-No errors reported}"
SETUP_FNM_ERROR_MESSAGE="${SETUP_FNM_ERROR_MESSAGE:-Errors were reported}"
SETUP_FNM_NOTIFY_CLIENT_NAME="${SETUP_FNM_NOTIFY_CLIENT_NAME:-$APPNAME}"
SETUP_FNM_NOTIFY_CLIENT_ICON="${SETUP_FNM_NOTIFY_CLIENT_ICON:-notification-new}"
SETUP_FNM_NOTIFY_CLIENT_URGENCY="${SETUP_FNM_NOTIFY_CLIENT_URGENCY:-normal}"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Additional Variables
SETUP_FNM_INSTALL_SCRIPT="${SETUP_FNM_INSTALL_SCRIPT:-https://raw.githubusercontent.com/Schniz/fnm/master/.ci/install.sh}"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Generate config files
[ -f "$SETUP_FNM_CONFIG_DIR/$SETUP_FNM_CONFIG_FILE" ] ||
  [ "$*" = "--config" ] || INIT_CONFIG="${INIT_CONFIG:-TRUE}" __gen_config ${SETARGS:-$@}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Import config
[ -f "$SETUP_FNM_CONFIG_DIR/$SETUP_FNM_CONFIG_FILE" ] &&
  . "$SETUP_FNM_CONFIG_DIR/$SETUP_FNM_CONFIG_FILE"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Ensure Directories exist
[ -d "$SETUP_FNM_RUN_DIR" ] || mkdir -p "$SETUP_FNM_RUN_DIR" |& __devnull
[ -d "$SETUP_FNM_LOG_DIR" ] || mkdir -p "$SETUP_FNM_LOG_DIR" |& __devnull
[ -d "$SETUP_FNM_TEMP_DIR" ] || mkdir -p "$SETUP_FNM_TEMP_DIR" |& __devnull
[ -d "$SETUP_FNM_CACHE_DIR" ] || mkdir -p "$SETUP_FNM_CACHE_DIR" |& __devnull
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
SETUP_FNM_TEMP_FILE="${SETUP_FNM_TEMP_FILE:-$(mktemp $SETUP_FNM_TEMP_DIR/XXXXXX 2>/dev/null)}"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
