#!/usr/bin/env bash
# shellcheck shell=bash
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
##@Version           :  202208302035-git
# @@Author           :  Jason Hempstead
# @@Contact          :  jason@casjaysdev.com
# @@License          :  WTFPL
# @@ReadME           :  vercel-cli --help
# @@Copyright        :  Copyright: (c) 2022 Jason Hempstead, Casjays Developments
# @@Created          :  Tuesday, Aug 30, 2022 20:42 EDT
# @@File             :  vercel-cli
# @@Description      :  vercel wrapper app with rm all unaliased deployments
# @@Changelog        :  New script
# @@TODO             :  Better documentation
# @@Other            :
# @@Resource         :
# @@Terminal App     :  no
# @@sudo/root        :  no
# @@Template         :  bash/user
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
APPNAME="$(basename "$0" 2>/dev/null)"
VERSION="202208302035-git"
HOME="${USER_HOME:-$HOME}"
USER="${SUDO_USER:-$USER}"
RUN_USER="${SUDO_USER:-$USER}"
SCRIPT_SRC_DIR="${BASH_SOURCE%/*}"
VERCEL_CLI_REQUIRE_SUDO="${VERCEL_CLI_REQUIRE_SUDO:-no}"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Reopen in a terminal
#if [ ! -t 0 ] && { [ "$1" = --term ] || [ $# = 0 ]; }; then { [ "$1" = --term ] && shift 1 || true; } && TERMINAL_APP="TRUE" myterminal -e "$APPNAME $*" && exit || exit 1; fi
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Initial debugging
[ "$1" = "--debug" ] && set -x && export SCRIPT_OPTS="--debug" && export _DEBUG="on"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Disables colorization
[ "$1" = "--raw" ] && export SHOW_RAW="true"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# pipes fail
set -o pipefail
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Main function file
if [ -f "$SCRIPT_SRC_DIR/functions.bash" ]; then
  FUNCTIONS_DIR="$SCRIPT_SRC_DIR"
  . "$FUNCTIONS_DIR/functions.bash"
elif [ -f "$HOME/.local/bin/functions.bash" ]; then
  FUNCTIONS_DIR="$HOME/.local/bin"
  . "$FUNCTIONS_DIR/functions.bash"
else
  printf "\t\t\033[0;31m%s \033[0m\n" "Couldn't source the functions file from ${FUNCTIONS_DIR:-$SCRIPT_SRC_DIR}"
  exit 1
fi
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Send all output to /dev/null
__devnull() {
  tee &>/dev/null && exitCode=0 || exitCode=1
  return ${exitCode:-$?}
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -'
# Send errors to /dev/null
__devnull2() {
  [ -n "$1" ] && local cmd="$1" && shift 1 || return 1
  eval $cmd "$*" 2>/dev/null && exitCode=0 || exitCode=1
  return ${exitCode:-$?}
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -'
# See if the executable exists
__cmd_exists() {
  exitCode=0
  [ -n "$1" ] && local exitCode="" || return 0
  for cmd in "$@"; do
    builtin command -v "$cmd" &>/dev/null && exitCode+=$(($exitCode + 0)) || exitCode+=$(($exitCode + 1))
  done
  [ $exitCode -eq 0 ] || exitCode=3
  return ${exitCode:-$?}
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Check for a valid internet connection
__am_i_online() {
  local exitCode=0
  curl -q -LSsfI --max-time 1 --retry 0 "${1:-http://1.1.1.1}" 2>&1 | grep -qi 'server:.*cloudflare' || exitCode=4
  return ${exitCode:-$?}
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# colorization
if [ "$SHOW_RAW" = "true" ]; then
  printf_color() { printf '%b' "$1" | tr -d '\t' | sed '/^%b$/d;s,\x1B\[ 0-9;]*[a-zA-Z],,g'; }
else
  printf_color() { printf "%b" "$(tput setaf "${2:-7}" 2>/dev/null)" "$1" "$(tput sgr0 2>/dev/null)"; }
fi
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Additional printf_ colors
__printf_head() { printf_blue "$1"; }
__printf_opts() { printf_purple "$1"; }
__printf_line() { printf_cyan "$1"; }
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# output version
__version() { printf_cyan "$VERSION"; }
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# list options
__list_options() {
  printf_color "$1: " "$5"
  echo -ne "$2" | sed 's|:||g;s/'$3'/ '$4'/g'
  printf_newline
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# create the config file
__gen_config() {
  local NOTIFY_CLIENT_NAME="$APPNAME"
  if [ "$INIT_CONFIG" != "TRUE" ]; then
    printf_blue "Generating the config file in"
    printf_cyan "$VERCEL_CLI_CONFIG_DIR/$VERCEL_CLI_CONFIG_FILE"
  fi
  [ -d "$VERCEL_CLI_CONFIG_DIR" ] || mkdir -p "$VERCEL_CLI_CONFIG_DIR"
  [ -d "$VERCEL_CLI_CONFIG_BACKUP_DIR" ] || mkdir -p "$VERCEL_CLI_CONFIG_BACKUP_DIR"
  [ -f "$VERCEL_CLI_CONFIG_DIR/$VERCEL_CLI_CONFIG_FILE" ] &&
    cp -Rf "$VERCEL_CLI_CONFIG_DIR/$VERCEL_CLI_CONFIG_FILE" "$VERCEL_CLI_CONFIG_BACKUP_DIR/$VERCEL_CLI_CONFIG_FILE.$$"
  cat <<EOF >"$VERCEL_CLI_CONFIG_DIR/$VERCEL_CLI_CONFIG_FILE"
# Settings for vercel-cli
VERCEL_CLI_BIN="${VERCEL_CLI_BIN:-}"
VERCEL_CLI_REMOVE_OLD="${VERCEL_CLI_REMOVE_OLD:-}"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Color Settings
VERCEL_CLI_OUTPUT_COLOR_1="${VERCEL_CLI_OUTPUT_COLOR_1:-}"
VERCEL_CLI_OUTPUT_COLOR_2="${VERCEL_CLI_OUTPUT_COLOR_2:-}"
VERCEL_CLI_OUTPUT_COLOR_GOOD="${VERCEL_CLI_OUTPUT_COLOR_GOOD:-}"
VERCEL_CLI_OUTPUT_COLOR_ERROR="${VERCEL_CLI_OUTPUT_COLOR_ERROR:-}"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Notification Settings
VERCEL_CLI_NOTIFY_ENABLED="${VERCEL_CLI_NOTIFY_ENABLED:-}"
VERCEL_CLI_GOOD_NAME="${VERCEL_CLI_GOOD_NAME:-}"
VERCEL_CLI_ERROR_NAME="${VERCEL_CLI_ERROR_NAME:-}"
VERCEL_CLI_GOOD_MESSAGE="${VERCEL_CLI_GOOD_MESSAGE:-}"
VERCEL_CLI_ERROR_MESSAGE="${VERCEL_CLI_ERROR_MESSAGE:-}"
VERCEL_CLI_NOTIFY_CLIENT_NAME="${VERCEL_CLI_NOTIFY_CLIENT_NAME:-}"
VERCEL_CLI_NOTIFY_CLIENT_ICON="${VERCEL_CLI_NOTIFY_CLIENT_ICON:-}"
VERCEL_CLI_NOTIFY_CLIENT_URGENCY="${VERCEL_CLI_NOTIFY_CLIENT_URGENCY:-}"

EOF
  if builtin type -t __gen_config_local | grep -q 'function'; then __gen_config_local; fi
  if [ -f "$VERCEL_CLI_CONFIG_DIR/$VERCEL_CLI_CONFIG_FILE" ]; then
    [ "$INIT_CONFIG" = "TRUE" ] || printf_green "Your config file for $APPNAME has been created"
    . "$VERCEL_CLI_CONFIG_DIR/$VERCEL_CLI_CONFIG_FILE"
    exitCode=0
  else
    printf_red "Failed to create the config file"
    exitCode=1
  fi
  return ${exitCode:-$?}
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Help function - Align to 50
__help() {
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -"
  __printf_opts "vercel-cli: vercel wrapper app with rm all unaliased deployments - $VERSION"
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -"
  __printf_line "Usage: vercel-cli [options] [commands]"
  __printf_line " - "
  __printf_line " - "
  __printf_line "--dir                           - Sets the working directory"
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -"
  __printf_opts "Other Options"
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -"
  __printf_line "--help                          - Shows this message"
  __printf_line "--config                        - Generate user config file"
  __printf_line "--version                       - Show script version"
  __printf_line "--options                       - Shows all available options"
  __printf_line "--debug                         - Enables script debugging"
  __printf_line "--raw                           - Removes all formatting on output"
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -"
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Is current user root
__user_is_root() {
  { [ $(id -u) -eq 0 ] || [ $EUID -eq 0 ] || [ "$WHOAMI" = "root" ]; } && return 0 || return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Is current user not root
__user_is_not_root() {
  { [ $(id -u) -ne 0 ] || [ $EUID -ne 0 ] || [ "$WHOAMI" != "root" ]; } && return 0 || return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# # Get sudo password
__sudoask() { ask_for_password sudo true && return 0 || return 1; }
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Check if user is a member of sudo
__sudo_group() {
  grep -s "${1:-$USER}" "/etc/group" | grep -Eq 'wheel|adm|sudo' || return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Run sudo
__sudorun() {
  __sudoif && __cmd_exists sudo && sudo -HE "$@" || { __sudoif && eval "$@"; }
  return $?
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Test if user has access to sudo
__can_i_sudo() {
  (sudo -vn && sudo -ln) 2>&1 | grep -vq 'may not' >/dev/null && return 0
  __sudo_group "${1:-$USER}" || __sudoif || __sudo true &>/dev/null || return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# User can run sudo
__sudoif() {
  __user_is_root && return 0
  __can_i_sudo "${RUN_USER:-$USER}" && return 0
  __user_is_not_root && __sudoask && return 0 || return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Run command as root
requiresudo() {
  if [ "$VERCEL_CLI_REQUIRE_SUDO" = "yes" ] && [ -z "$VERCEL_CLI_REQUIRE_SUDO_RUN" ]; then
    export VERCEL_CLI_REQUIRE_SUDO="no"
    export VERCEL_CLI_REQUIRE_SUDO_RUN="true"
    __sudo "$@"
    exit $?
  else
    return 0
  fi
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Execute sudo
__sudo() {
  CMD="${1:-echo}" && shift 1
  CMD_ARGS="${*:--e "${RUN_USER:-$USER}"}"
  SUDO="$(builtin command -v sudo 2>/dev/null || echo 'eval')"
  [ "$(basename "$SUDO" 2>/dev/null)" = "sudo" ] && OPTS="--preserve-env=PATH -HE"
  if __sudoif; then
    export PATH="$PATH"
    $SUDO ${OPTS:-} $CMD $CMD_ARGS && true || false
    exitCode=$?
  else
    printf '%s\n' "This requires root to run"
    exitCode=1
  fi
  return ${exitCode:-1}
}
# End of sudo functions
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
__trap_exit() {
  exitCode=${exitCode:-$?}
  [ -f "$VERCEL_CLI_TEMP_FILE" ] && rm -Rf "$VERCEL_CLI_TEMP_FILE" &>/dev/null
  if builtin type -t __trap_exit_local | grep -q 'function'; then __trap_exit_local; fi
  return $exitCode
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# User defined functions
__init_bin() {
  [ -z "$VERCEL_CLI_BIN" ] || return 0
  vercel="$(builtin type -P vercel || builtin type -P now || echo '')"
  if builtin type -p npm &>/dev/null && [ -z "$vercel" ]; then
    npm i -g vercel &>/dev/null && builtin type -P vercel 2>/dev/null || printf_exit "Failed to install vercel"
    return $?
  else
    return 0
  fi
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
__setup_vercel() {
  local vercel="${VERCEL_CLI_BIN:-$vercel}"
  if [ -f "$vercel" ]; then
    eval $vercel "$@"
    return $?
  else
    printf_red "Neither vercel nor now is installed"
    printf_yellow "'npm i -g vercel' or 'yarn global add vercel'"
    return 1
  fi
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
__remove_old() {
  if [ "$SETUP_VERCEL_RM_ALL" = "true" ] || [ "$VERCEL_CLI_REMOVE_OLD" = "yes" ]; then
    rm_list="$(__setup_vercel ls $1 2>&1 | grep http.*// | awk '{print $2}')"
    for app in $rm_list; do
      __setup_vercel rm --safe --yes $app
    done
    rm_list="$(__setup_vercel ls $1 2>&1 | grep http.*// | awk '{print $2}' | wc -l)"
    if [ "$rm_list" -gt 1 ]; then
      __remove_old $1
    fi
    return $?
  fi
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# User defined variables/import external variables

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Application Folders
VERCEL_CLI_CONFIG_FILE="${VERCEL_CLI_CONFIG_FILE:-settings.conf}"
VERCEL_CLI_CONFIG_DIR="${VERCEL_CLI_CONFIG_DIR:-$HOME/.config/misc/settings/vercel-cli}"
VERCEL_CLI_CONFIG_BACKUP_DIR="${VERCEL_CLI_CONFIG_BACKUP_DIR:-$HOME/.local/share/misc/settings/vercel-cli/backups}"
VERCEL_CLI_LOG_DIR="${VERCEL_CLI_LOG_DIR:-$HOME/.local/log/vercel-cli}"
VERCEL_CLI_TEMP_DIR="${VERCEL_CLI_TEMP_DIR:-$HOME/.local/tmp/system_scripts/vercel-cli}"
VERCEL_CLI_CACHE_DIR="${VERCEL_CLI_CACHE_DIR:-$HOME/.cache/vercel-cli}"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Color Settings
VERCEL_CLI_OUTPUT_COLOR_1="${VERCEL_CLI_OUTPUT_COLOR_1:-4}"
VERCEL_CLI_OUTPUT_COLOR_2="${VERCEL_CLI_OUTPUT_COLOR_2:-5}"
VERCEL_CLI_OUTPUT_COLOR_GOOD="${VERCEL_CLI_OUTPUT_COLOR_GOOD:-2}"
VERCEL_CLI_OUTPUT_COLOR_ERROR="${VERCEL_CLI_OUTPUT_COLOR_ERROR:-1}"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Notification Settings
VERCEL_CLI_NOTIFY_ENABLED="${VERCEL_CLI_NOTIFY_ENABLED:-yes}"
VERCEL_CLI_GOOD_NAME="${VERCEL_CLI_GOOD_NAME:-Great:}"
VERCEL_CLI_ERROR_NAME="${VERCEL_CLI_ERROR_NAME:-Error:}"
VERCEL_CLI_GOOD_MESSAGE="${VERCEL_CLI_GOOD_MESSAGE:-No errors reported}"
VERCEL_CLI_ERROR_MESSAGE="${VERCEL_CLI_ERROR_MESSAGE:-Errors were reported}"
VERCEL_CLI_NOTIFY_CLIENT_NAME="${VERCEL_CLI_NOTIFY_CLIENT_NAME:-$APPNAME}"
VERCEL_CLI_NOTIFY_CLIENT_ICON="${VERCEL_CLI_NOTIFY_CLIENT_ICON:-notification-new}"
VERCEL_CLI_NOTIFY_CLIENT_URGENCY="${VERCEL_CLI_NOTIFY_CLIENT_URGENCY:-normal}"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Additional Variables
VERCEL_CLI_REMOVE_OLD="${VERCEL_CLI_REMOVE_OLD:-yes}"
VERCEL_CLI_BIN="${VERCEL_CLI_BIN:-$(builtin type -P vercel || builtin type -P now)}"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Generate config files
[ -f "$VERCEL_CLI_CONFIG_DIR/$VERCEL_CLI_CONFIG_FILE" ] ||
  [ "$*" = "--config" ] || INIT_CONFIG="${INIT_CONFIG:-TRUE}" __gen_config ${SETARGS:-$@}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Import config
[ -f "$VERCEL_CLI_CONFIG_DIR/$VERCEL_CLI_CONFIG_FILE" ] &&
  . "$VERCEL_CLI_CONFIG_DIR/$VERCEL_CLI_CONFIG_FILE"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Ensure Directories exist
[ -d "$VERCEL_CLI_LOG_DIR" ] ||
  mkdir -p "$VERCEL_CLI_LOG_DIR" |& __devnull
[ -d "$VERCEL_CLI_TEMP_DIR" ] ||
  mkdir -p "$VERCEL_CLI_TEMP_DIR" |& __devnull
[ -d "$VERCEL_CLI_CACHE_DIR" ] ||
  mkdir -p "$VERCEL_CLI_CACHE_DIR" |& __devnull
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
VERCEL_CLI_TEMP_FILE="${VERCEL_CLI_TEMP_FILE:-$(mktemp $VERCEL_CLI_TEMP_DIR/XXXXXX 2>/dev/null)}"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Setup trap to remove temp file
trap '__trap_exit' EXIT
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Setup notification function
__notifications() {
  __cmd_exists notifications || return
  [ "$VERCEL_CLI_NOTIFY_ENABLED" = "yes" ] || return
  [ "$SEND_NOTIFICATION" = "no" ] && return
  (
    set +x
    export SCRIPT_OPTS="" _DEBUG=""
    export NOTIFY_GOOD_MESSAGE="${NOTIFY_GOOD_MESSAGE:-$VERCEL_CLI_GOOD_MESSAGE}"
    export NOTIFY_ERROR_MESSAGE="${NOTIFY_ERROR_MESSAGE:-$VERCEL_CLI_ERROR_MESSAGE}"
    export NOTIFY_CLIENT_ICON="${NOTIFY_CLIENT_ICON:-$VERCEL_CLI_NOTIFY_CLIENT_ICON}"
    export NOTIFY_CLIENT_NAME="${NOTIFY_CLIENT_NAME:-$VERCEL_CLI_NOTIFY_CLIENT_NAME}"
    export NOTIFY_CLIENT_URGENCY="${NOTIFY_CLIENT_URGENCY:-$VERCEL_CLI_NOTIFY_CLIENT_URGENCY}"
    notifications "$@"
    retval=$?
    return $retval
  ) |& __devnull &
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Set custom icons

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Argument/Option settings
SETARGS=("$@")
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
SHORTOPTS=""
SHORTOPTS+=""
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
LONGOPTS="completions:,config,debug,dir:,help,options,raw,version,silent"
LONGOPTS+=",rm"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
ARRAY=""
ARRAY+=""
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
LIST=""
LIST+=""
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Setup application options
setopts=$(getopt -o "$SHORTOPTS" --long "$LONGOPTS" -a -n "$APPNAME" -- "$@" 2>/dev/null)
eval set -- "${setopts[@]}" 2>/dev/null
while :; do
  case "$1" in
  --raw)
    shift 1
    export SHOW_RAW="true"
    printf_column() { tee | grep '^'; }
    printf_color() { printf '%b' "$1" | tr -d '\t' | sed '/^%b$/d;s,\x1B\[ 0-9;]*[a-zA-Z],,g'; }
    ;;
  --debug)
    shift 1
    set -xo pipefail
    export SCRIPT_OPTS="--debug"
    export _DEBUG="on"
    __devnull() { tee || return 1; }
    __devnull2() { eval "$@" |& tee || return 1; }
    ;;
  --completions)
    if [ "$2" = "short" ]; then
      printf '%s\n' "-$SHORTOPTS" | sed 's|"||g;s|:||g;s|,|,-|g' | tr ',' '\n'
    elif [ "$2" = "long" ]; then
      printf '%s\n' "--$LONGOPTS" | sed 's|"||g;s|:||g;s|,|,--|g' | tr ',' '\n'
    elif [ "$2" = "array" ]; then
      printf '%s\n' "$ARRAY" | sed 's|"||g;s|:||g' | tr ',' '\n'
    elif [ "$2" = "list" ]; then
      printf '%s\n' "$LIST" | sed 's|"||g;s|:||g' | tr ',' '\n'
    else
      exit 1
    fi
    shift 2
    exit $?
    ;;
  --options)
    shift 1
    printf_blue "Current options for ${PROG:-$APPNAME}"
    [ -z "$SHORTOPTS" ] || __list_options "Short Options" "-${SHORTOPTS}" ',' '-' 4
    [ -z "$LONGOPTS" ] || __list_options "Long Options" "--${LONGOPTS}" ',' '--' 4
    [ -z "$ARRAY" ] || __list_options "Base Options" "${ARRAY}" ',' '' 4
    exit $?
    ;;
  --version)
    shift 1
    __version
    exit $?
    ;;
  --help)
    shift 1
    __help
    exit $?
    ;;
  --config)
    shift 1
    __gen_config
    exit $?
    ;;
  --silent)
    shift 1
    VERCEL_CLI_SILENT="true"
    ;;
  --dir)
    CWD_IS_SET="TRUE"
    VERCEL_CLI_CWD="$2"
    [ -d "$VERCEL_CLI_CWD" ] || mkdir -p "$VERCEL_CLI_CWD" |& __devnull
    shift 2
    ;;
  --rm)
    shift 1
    SETUP_VERCEL_RM_ALL="true"
    ;;
  --)
    shift 1
    break
    ;;
  esac
done
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Get directory from args
# set -- "$@"
