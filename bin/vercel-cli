cmd_exists --error --ask bash || exit 3 # exit 3 if not found
#am_i_online --error || exit 4           # exit 4 if no internet
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# APP Variables overrides

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Actions based on env
__init_bin
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# begin main app
case "$1" in
prod | production)
  __setup_vercel deploy --prod && __remove_old
  exit $?
  ;;
deploy)
  __setup_vercel deploy && __remove_old
  exit $?
  ;;
rm)
  shift 1
  SETUP_VERCEL_RM_ALL="true" __remove_old "$@"
  exit $?
  ;;
*)
  if [ "$SETUP_VERCEL_RM_ALL" = "true" ]; then
    __remove_old "$@"
  elif [ $# = 0 ]; then
    __setup_vercel ls
    exitCode=$?
  elif [ $# -ne 0 ]; then
    __setup_vercel "$@"
    exitCode=$?
  else
    __setup_vercel "${@:---help}"
    exitCode=$?
  fi
  ;;
esac
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Set exit code
exitCode="${exitCode:-$?}"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# End application
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# lets exit with code
exit ${exitCode:-$?}
